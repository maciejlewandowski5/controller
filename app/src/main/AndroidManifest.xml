<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.controler">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".musicPage.MusicPage"
            android:exported="true" />
        <activity android:name=".waterPage.WaterPage"
            android:exported="true" ></activity>
        <activity
            android:name=".lightPage.LightPage"
            android:exported="true" />
        <activity
            android:name=".WagglePage"
            android:exported="true" />
        <activity
            android:name=".GrabPage"
            android:exported="true" />
        <activity
            android:name=".ConnectionManager"
            android:exported="true" />

        <activity
            android:name=".controlPage.ContrlPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true"
            android:label="@string/title_activity_contrl_page"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>